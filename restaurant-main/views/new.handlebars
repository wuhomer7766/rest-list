<h1 class="mb-1 restaurant-show-title">Add a new lovely restaurant</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="mb-1">
        <form action="/restaurants/" method="POST">
          <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">餐廳名稱：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="name_en" class="col-sm-2 col-form-label">英文名：</label>
            <div class="col-sm-10">
              <input type="name_en" class="form-control" id="name_en" name="name_en">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="category" class="col-sm-2 col-form-label">類別：</label>
            <div class="col-sm-10">
              <select class="form-control" id="category" name="category">
                <option selected>Open this select menu</option>
                <option>中東料理</option>
                <option>中式餐廳</option>
                <option>日本料理</option>
                <option>南洋料理</option>
                <option>義式餐廳</option>
                <option>美式餐廳</option>
                <option>酒吧</option>
                <option>咖啡</option>
                <option>甜點</option>
                <option>其他</option>
              </select>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="image" class="col-sm-2 col-form-label">圖片網址：</label>
            <div class="col-sm-10">
              {{!-- <input class="form-control" type="file" id="image"> --}}
              <input type="text" class="form-control" id="image" name="image">
            </div>
          </div>
          <div class="mb-3 row">
            <label for="location" class="col-sm-2 col-form-label">地址：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="location" name="location" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="phone" class="col-sm-2 col-form-label">電話：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="phone" name="phone" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="google_map" class="col-sm-2 col-form-label">Google Map：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="google_map" name="google_map" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="rating" class="col-sm-2 col-form-label">評分(滿分 5 分)：</label>
            <div class="col-sm-10">
              <input type="number" class="form-control" min="0" max="5" step="0.1" id="rating" name="rating" required>
            </div>
          </div>
          <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">餐廳簡介：</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="description" name="description">
            </div>
          </div>
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button type="submit" class="btn btn-success">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>